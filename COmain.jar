package main;



import java.util.logging.Logger;

import org.spongepowered.api.Game;
import org.spongepowered.api.entity.player.Player;
import org.spongepowered.api.event.Subscribe;
import org.spongepowered.api.event.entity.player.PlayerChatEvent;
import org.spongepowered.api.event.entity.player.PlayerDeathEvent;
import org.spongepowered.api.event.network.PlayerConnectionEvent;
import org.spongepowered.api.event.state.ServerStartingEvent;
import org.spongepowered.api.plugin.Plugin;
import org.spongepowered.api.text.Text;
import org.spongepowered.api.text.Texts;
import org.spongepowered.api.text.format.TextColors;

import com.google.inject.Inject;


@Plugin(id = "Randomid", name = "CommandsOverhall", version = "0.1")
public class main {
   
	@Inject
	Game game;
    
    @Inject
	Logger logger;

    @Inject
    Player player;
    
	// Ahead is the code for the servercore chatbot


	
	
	@Subscribe
	public void MainChat(PlayerChatEvent event) {
    if(event.getMessage().equals("hell"));
    else if(event.getMessage().equals("shit"));
    else if(event.getMessage().equals("bitch"));
    else if(event.getMessage().equals("fuck"));
    else if(event.getMessage().equals("nigga"));
   
    event.setCancelled(true);
    

	}
	
	@Subscribe
	public void DeathBroadcast(PlayerDeathEvent event) {
		
		
	}
	
	
	
	@Subscribe
	public void Connect1(PlayerConnectionEvent event) {
		
		int ping = event.getConnection().getPing();
		
		Texts.builder("ping: " + player.getConnection().getPing()).color(TextColors.GOLD).build();
	}
	
	
	
	
	@Subscribe
	public void C1(PlayerChatEvent event) {
	
	
	if(event.getMessage().equals("ping"));
	
	
	
	Texts.builder("Your ping is: " + event.getUser().getConnection().getPing()).color(TextColors.GOLD).build();
	
	
	if(event.getMessage().equals("ver"));
	
	Texts.builder("The Version of this plugin is: 0.1").color(TextColors.GOLD).build();
	
	
	if(event.getMessage().equals("debug"));
	
	
	Texts.builder("INFO: This is a Very early dev build and currently i do not offer support for dev builds before 0.2 Update Please").color(TextColors.GOLD).build();
	
	
	
	
	if(event.getMessage().equals("serverinfo"));
	
	Texts.builder("Max Players: " + event.getGame().getServer().getMaxPlayers()).color(TextColors.GOLD).build();;
	
	Texts.builder("Motd: " + event.getGame().getServer().getMotd()).color(TextColors.GOLD).build();
	
	Texts.builder("Worlds: " + event.getGame().getServer().getWorlds()).color(TextColors.GOLD).build();
	
	
	if(event.getMessage().equals("playerinfo"));
	

	Texts.builder("Your name is: " + player.getName()).color(TextColors.GOLD).build();
	
	Texts.builder("Display name: " + player.getDisplayNameData()).color(TextColors.GOLD).build();
	
	Texts.builder("Health: " + player.getHealthData()).color(TextColors.GOLD).build();
	
	Texts.builder("You are in: " + player.getWorld() + " World").color(TextColors.GOLD).build();
	
	
	Texts.builder("").color(TextColors.GOLD).build();
	
	
	
	
	}
	
	
	
	
	
	@Subscribe
	public void onstartevent(ServerStartingEvent event) {
	
	logger.info("Commands Overhall Has Loaded, note! You are loading a Dev Version, You may inconter some errors");
		
	
	}
	
		
	
	
	
}
	
	
	
	
	
	
	
	
	

	
